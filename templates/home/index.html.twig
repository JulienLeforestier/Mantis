{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
	<div class="container-fluid justify-content-center">
		<div id="myProducts" class="row col-lg-12 justify-content-center">
			{% for product in products_list %}
				<div class="col-md-4 p-1">
					<div class="card">
						<div class="card-body">
							<div class="row">
								<div class="col-5">
									<img class="img-card" src="{{ url_images_products ~ product.picture }}" alt="{{ product.title }}" width="120">
								</div>
								<div class="col-7">
									<h5 class="card-title">{{ product.title }}</h5>
									<p class="card-text">{{ product.description | u.truncate(150, '...') }}</p>
									<p class="card-text">{{ product.price }}&euro;</p>
								</div>
							</div>
						</div>
						<div class="card-footer">
							<form method="GET" action="{{ path("cart_add", { id: product.id }) }}" class="mt-2 form-inline" id="">
								<div class="row">
									<a href="{{ path("home_show", {id: product.id}) }}" class="btn btn-primary col-md-3"><i class="fas fa-eye"></i></a>
									<div class="col-md-6"></div>
										<input type="number" name="quantity" value="1" min="1" max={{ product.stock }} class="form col-md-2">
										<button class="btn btn-primary col-md-1">
											<i class="fas fa-cart-plus"></i>
										</button>
								</div>
							</form>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
