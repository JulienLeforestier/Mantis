{% extends 'base.html.twig' %}

{% block title %}Command{% endblock %}

{% block body %}
    <h1>Command</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ command.id }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ command.amount }}</td>
            </tr>
            <tr>
                <th>Registration_date</th>
                <td>{{ command.registrationDate ? command.registrationDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ command.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('command_index') }}">back to list</a>

    <a href="{{ path('command_edit', {'id': command.id}) }}">edit</a>

    {{ include('command/_delete_form.html.twig') }}
