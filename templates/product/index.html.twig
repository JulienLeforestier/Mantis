{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Prix</th>
                <th>Stock</th>
                <th>Image</th>
                <th>Description</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.title }}</td>
                <td>{{ product.price }}&euro;</td>
                <td>{{ product.stock }}</td>
                <td><img class="img" src="{{ url_images_products ~ product.picture }}" alt="{{ product.title }}" width="50"></td>
                <td>{{ product.description | u.truncate(75, '...') }}</td>
                <td>
                    <a href="{{ path('product_show', {'id': product.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('product_edit', {'id': product.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('product_new') }}" class="btn btn-primary">Nouveau produit</a>
    <br><br>
{% endblock %}
