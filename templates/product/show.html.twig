{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit n°{{ product.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ product.title }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ product.price }}&euro;</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ product.stock }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td><img class="img" src="{{ url_images_products ~ product.picture }}" alt="{{ product.title }}" width="300"></td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ product.description }}</td>
            </tr>
        </tbody>
    </table>

	<a href="{{ path('product_index') }}" class="btn btn-primary">Retour</a>

	<a href="{{ path('product_edit', {'id': product.id}) }}" class="btn btn-primary">Éditer</a>
	<br><br>
    {{ include('product/_delete_form.html.twig') }}
    <br>
{% endblock %}
