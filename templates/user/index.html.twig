{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}
    <h1>Membres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Rôles</th>
     		    <th>Nom</th>
				<th>Prénom</th>
				<th>Adresse</th>
				<th>CP</th>
				<th>Ville</th>
				<th>Tél.</th>
                <th>Email vérifié</th>
                <th>Nb&nbsp;de&nbsp;commandes</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.address }}</td>
                <td>{{ user.zipCode }}</td>
                <td>{{ user.city }}</td>
                <td>{{ user.phoneNumber }}</td>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
                <td>{{ user.commands|length }}</td>
                <td>
                    <a href="{{ path('user_show', {'id': user.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="13">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('user_new') }}" class="btn btn-primary">Nouveau membre</a>
    <br>
{% endblock %}
