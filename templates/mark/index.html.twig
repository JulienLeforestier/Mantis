{% extends 'base.html.twig' %}

{% block title %}Éditeurs{% endblock %}

{% block body %}
    <h1>Éditeurs</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mark in marks %}
            <tr>
                <td>{{ mark.id }}</td>
                <td>{{ mark.title }}</td>
                <td>
                    <a href="{{ path('mark_show', {'id': mark.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('mark_edit', {'id': mark.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('mark_new') }}" class="btn btn-primary">Nouvel éditeur</a>
    <br>
{% endblock %}
