{% extends 'base.html.twig' %}

{% block title %}Genres{% endblock %}

{% block body %}
    <h1>Genres</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.title }}</td>
                <td>
                    <a href="{{ path('type_show', {'id': type.id}) }}">
                        <i class="fas fa-eye"></i>
                    </a>
                </td>
                <td>
                    <a href="{{ path('type_edit', {'id': type.id}) }}">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Aucun résultat trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('type_new') }}" class="btn btn-primary">Nouveau genre</a>
    <br><br>
{% endblock %}
