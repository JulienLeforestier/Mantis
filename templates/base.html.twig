<!DOCTYPE html>
<html lang="fr">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Mantis{% endblock %}
		</title>
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}
	</head>
	<body>

		{% include "navbar.html.twig" %}

		<div class="container-fluid">

			{% for type, messages in app.flashes %}
				{% for msg in messages %}
					<div class="alert alert-{{ type }}">
						{{ msg }}
					</div>
				{% endfor %}
			{% endfor %}
			<div class="mb-3"> {% block body %}{% endblock %}</div>

        </div>

		{% include "footer.html.twig" %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
        
	</body>
</html>
