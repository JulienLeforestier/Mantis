{% extends 'base.html.twig' %}

{% block title %}Notice index{% endblock %}

{% block body %}
    <h1>Notice index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Comment</th>
                <th>Note</th>
                <th>Registration_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for notice in notices %}
            <tr>
                <td>{{ notice.id }}</td>
                <td>{{ notice.comment }}</td>
                <td>{{ notice.note }}</td>
                <td>{{ notice.registrationDate ? notice.registrationDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('notice_show', {'id': notice.id}) }}">show</a>
                    <a href="{{ path('notice_edit', {'id': notice.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('notice_new') }}">Create new</a>
{% endblock %}
