{% extends 'base.html.twig' %}

{% block title %}Avis{% endblock %}

{% block body %}
    <h1>Avis n°{{ notice.id }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Produit</th>
                <td>{{ notice.product.title }}</td>
            </tr>
            <tr>
                <th>Commentaire</th>
                <td>{{ notice.comment }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ notice.note }}</td>
            </tr>
            <tr>
                <th>Date d'enregistrement</th>
                <td>{{ notice.registrationDate ? notice.registrationDate|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

	<a href="{{ path('notice_index') }}" class="btn btn-primary">Retour</a>

	<a href="{{ path('notice_edit', {'id': notice.id}) }}" class="btn btn-primary">Éditer</a>
	<br><br>
    {{ include('notice/_delete_form.html.twig') }}
    <br>
{% endblock %}
